@model DataHolding.Models.Record;


<h1> Add Employeess </h1>
<form method="post" action="Add">
 
    <div class="w-25 mb-3">
        <input type="text" class="form-control" placeholder="Name" asp-for="Name">
    </div>

    <div class="w-25 mb-3">
        <input type="text" class="form-control" placeholder="Address" asp-for="Address">
    </div>

    <div class="w-25 mb-3">
        <input type="text" class="form-control" placeholder="District" asp-for="District">
    </div>

    <div class="w-25 mb-3">
        <input type="number" class="form-control" placeholder="Phone" asp-for="Phone">
    </div>
    <div class="w-25 mb-3">
        <input type="date" class="form-control" placeholder="DD-MM-YYYY" asp-for="Dob">
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>